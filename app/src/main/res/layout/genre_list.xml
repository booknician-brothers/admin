<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Genrelist"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Select Type"
        android:gravity="center"
        android:fontFamily="@font/aladin"
        android:textSize="50dp"
        android:textColor="#ffffff"/>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7"
            android:layout_marginTop="10sp">


            <TextView
                android:id="@+id/romantic_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/aref_ruqaa_bold"
                android:gravity="center"
                android:text="Romantic"
                android:textColor="#ffffff"
                android:textSize="35sp" />


            <TextView
                android:id="@+id/suspense_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/aref_ruqaa_bold"
                android:gravity="center"
                android:text="Suspense and thriller"
                android:textColor="#ffffff"
                android:textSize="35sp" />


            <TextView
                android:id="@+id/horror_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/aref_ruqaa_bold"
                android:gravity="center"
                android:text="Horror fiction"
                android:textColor="#ffffff"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/science_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/aref_ruqaa_bold"
                android:gravity="center"
                android:text="Science fiction"
                android:textColor="#ffffff"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/women_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/aref_ruqaa_bold"
                android:gravity="center"
                android:text="Womens fiction"
                android:textColor="#ffffff"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/fantasy_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/aref_ruqaa_bold"
                android:gravity="center"
                android:text="Fantasy"
                android:textColor="#ffffff"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/biography_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/aref_ruqaa_bold"
                android:gravity="center"
                android:text="Biography"
                android:textColor="#ffffff"
                android:textSize="35sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>